<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"

            android:id="@+id/firstName"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameImage"
            android:src="@drawable/ic_recent_actors_black_44x40"
            android:layout_alignBottom="@+id/firstName"
            android:layout_alignRight="@+id/passwordImage"
            android:layout_alignEnd="@+id/passwordImage" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"

            android:id="@+id/lastName"
            android:layout_below="@+id/firstName"
            android:layout_alignLeft="@+id/firstName"
            android:layout_alignStart="@+id/firstName" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameImage"
            android:src="@drawable/ic_recent_actors_black_44x40"
            android:layout_alignBottom="@+id/lastName"
            android:layout_alignRight="@+id/passwordImage"
            android:layout_alignEnd="@+id/passwordImage" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"

            android:id="@+id/userName"
            android:layout_below="@+id/lastName"
            android:layout_alignLeft="@+id/lastName"
            android:layout_alignStart="@+id/lastName" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"

            android:id="@+id/email"
            android:layout_below="@+id/userName"
            android:layout_alignLeft="@+id/userName"
            android:layout_alignStart="@+id/userName" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailImage"
            android:src="@drawable/ic_email_black_44x40"
            android:layout_alignBottom="@+id/email"
            android:layout_alignRight="@+id/passwordImage"
            android:layout_alignEnd="@+id/passwordImage" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"

            android:id="@+id/emailVerify"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailVerifyImage"
            android:src="@drawable/ic_email_black_44x40"
            android:layout_alignBottom="@+id/emailVerify"
            android:layout_alignRight="@+id/passwordImage"
            android:layout_alignEnd="@+id/passwordImage" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/oldUserPassword"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/emailVerify"
            android:layout_alignStart="@+id/emailVerify" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/userPassword"
            android:layout_centerVertical="true"
            android:layout_below="@id/oldUserPassword"
            android:layout_alignLeft="@+id/oldUserPassword"
            android:layout_alignStart="@+id/oldUserPassword" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"

            android:id="@+id/userPasswordVerify"
            android:layout_below="@+id/userPassword"
            android:layout_alignLeft="@+id/userPassword"
            android:layout_alignStart="@+id/userPassword" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameImage"
            android:src="@drawable/portrait"
            android:layout_alignBottom="@+id/userName"
            android:layout_alignRight="@+id/passwordImage"
            android:layout_alignEnd="@+id/passwordImage" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordImage"
            android:src="@drawable/ic_lock_open_black_44x40"
            android:layout_alignTop="@+id/userPassword"
            android:layout_toLeftOf="@+id/userPassword"
            android:layout_toStartOf="@+id/userPassword" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oldPasswordImage"
            android:src="@drawable/ic_lock_open_black_44x40"
            android:layout_alignTop="@+id/oldUserPassword"
            android:layout_toLeftOf="@+id/oldUserPassword"
            android:layout_toStartOf="@+id/oldUserPassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/registerButton"
            android:background="@drawable/btnorange_360"
            android:textColor="#ff00f5ff"
            android:layout_above="@+id/cancel"
            android:layout_centerHorizontal="true" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_lock_open_black_44x40"
            android:layout_alignBottom="@+id/userPasswordVerify"
            android:layout_toLeftOf="@+id/userPasswordVerify"
            android:layout_toStartOf="@+id/userPasswordVerify" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelRegistration"
            android:id="@+id/cancel"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbluee_360" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userImageIcon"
            android:src="@drawable/ic_wallpaper_black_44x40"
            android:layout_below="@+id/imageView"
            android:layout_toLeftOf="@+id/userPasswordVerify"
            android:layout_toStartOf="@+id/userPasswordVerify"
            android:layout_alignBottom="@+id/profile_image"/>

        <com.parse.ParseImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:src = "@drawable/profile"
            android:layout_below="@+id/userPasswordVerify"
            android:layout_alignLeft="@+id/registerButton"
            android:layout_alignStart="@+id/registerButton"
            android:layout_above="@+id/registerButton" />



    </RelativeLayout>
</LinearLayout>
</android.support.v4.widget.DrawerLayout>